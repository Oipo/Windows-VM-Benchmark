<Window x:Class="Windows_VM_Benchmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_VM_Benchmark"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <CheckBox x:Name="checkBoxCPU" Content="Benchmark CPU" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBoxIO" Content="Benchmark I/O" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox2D" Content="Benchmark 2D" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="90,242,0,0" VerticalAlignment="Top" Width="75" Click="stopButton_Click"/>
        <Canvas x:Name="twoDCanvas" HorizontalAlignment="Left" Height="500" Margin="283,10,0,0" VerticalAlignment="Top" Width="500"/>

    </Grid>
</Window>
